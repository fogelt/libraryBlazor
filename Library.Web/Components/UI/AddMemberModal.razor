@using Library.Core.Models
@using Library.Core.Interfaces
@using Library.Core.DTOs
@inject ILibraryService LibraryService

<div class="modal fade show d-block"
     style="background: rgba(0,0,0,0.7); backdrop-filter: blur(15px); z-index: 9999; overflow-y: auto;" tabindex="-1"
     role="dialog">
  <div class="modal-dialog modal-lg modal-dialog-centered" style="z-index: 10000;">
    <div class="glass-card border-white border-opacity-10 shadow-lg p-0 overflow-hidden w-100"
         style="pointer-events: all;">

      <div class="p-4 border-bottom border-white border-opacity-10 d-flex justify-content-between align-items-center">
        <h4 class="text-white fw-bold opacity-50 m-0"><i class="bi bi-plus-circle me-2"></i>Add to Members</h4>
        <button type="button" class="btn-close btn-close-white shadow-none" @onclick="OnClose"></button>
      </div>

      <EditForm Model="@newMember" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="modal-body py-3">
          <div class="mb-3">
            <label class="form-label opacity-75 small uppercase fw-bold">Full Name</label>
            <InputText @bind-Value="newMember.Name" class="form-control glass-input" placeholder="John Doe" />
            <ValidationMessage For="@(() => newMember.Name)" class="text-danger small" />
          </div>

          <div class="mb-3">
            <label class="form-label opacity-75 small uppercase fw-bold">Email Address</label>
            <InputText @bind-Value="newMember.Email" class="form-control glass-input" placeholder="john@example.com" />
            <ValidationMessage For="@(() => newMember.Email)" class="text-danger small" />
          </div>

        </div>

        <div class="modal-footer border-0">
          <button type="submit" class="btn glass-card px-4 flex-grow-1">
            <i class="bi bi-check2-circle me-2"></i>Add member
          </button>
          <button type="button" class="btn glass-card px-4" @onclick="OnClose">
            Cancel
          </button>
        </div>
      </EditForm>
    </div>
  </div>
</div>

@code {
  [Parameter] public EventCallback OnClose { get; set; }
  [Parameter] public EventCallback OnMemberAdded { get; set; }

  private AddMemberDto newMember = new AddMemberDto();

  private async Task HandleSubmit()
  {
    await LibraryService.AddMemberFromDtoAsync(newMember);
    await OnMemberAdded.InvokeAsync();
    await OnClose.InvokeAsync();
  }
}