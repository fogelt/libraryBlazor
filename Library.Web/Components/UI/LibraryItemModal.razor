@using Library.Core.Models.Items

@if (Item != null)
{
  <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(5px);">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content glass-card border-white border-opacity-10 text-white">
        <div class="modal-header border-0 pb-0">
          <h5 class="modal-title fw-bold">@Item.Title</h5>
          <button type="button" class="btn-close btn-close-white focus-none" @onclick="OnClose"></button>
        </div>
        <div class="modal-body py-4">
          <div class="d-flex flex-column gap-2">
            <p class="opacity-75"><strong>Author:</strong> @Item.Author</p>
            <p class="opacity-75"><strong>Year:</strong> @Item.PublishedYear</p>
            <hr class="border-white opacity-10" />
            <p>Detailed description or library-specific info goes here...</p>
          </div>
        </div>
        <div class="modal-footer border-0 pt-0">
          @if (Item.IsAvailable)
          {
            <button type="button" class="glass-card px-4 py-2">
              <i class="bi bi-cart me-2" title="Book"></i>
              Add to cart
            </button>
          }
        </div>
      </div>
    </div>
  </div>
}

@code {
  [Parameter] public LibraryItem? Item { get; set; }
  [Parameter] public EventCallback OnClose { get; set; }
}